<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75B98A">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="43dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logoApiBib"
            android:src="@drawable/apibib_logo_vert"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="214dp"
                android:layout_height="151dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="STATISTIQUES"/>

                <TextView
                    android:id="@+id/duree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Durée"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/quInitiale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantité initiale"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/quBue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantité bue"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/vitesse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitesse"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synchronisation"
                    android:layout_gravity="center"
                    android:onClick="synchronisation"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@drawable/biberon" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/boutons_de_navigation"/>

</RelativeLayout>

